<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mupen64plus"
		name="Nintendo - Nintendo 64 (Mupen64Plus)"
		version="2.5.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.n64" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Nintendo 64</platforms>
		<extensions>n64|v64|z64|bin|u1|ndd</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Nintendo - Nintendo 64 (Mupen64Plus) 2.5</summary>
		<description>Mupen64 is a N64 emulator desgined to be multi-OS. It uses a plugin system and is highly compatible.

Supported files: .n64, .v64, .z64, .bin, .u1, .ndd</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
	</extension>
</addon>
